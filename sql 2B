BEGIN
  EXECUTE IMMEDIATE 'DROP TABLE employee';
EXCEPTION
  WHEN OTHERS THEN NULL;
END;
/

CREATE TABLE employee (
  emp_id NUMBER PRIMARY KEY,
  name VARCHAR2(30),
  dept VARCHAR2(20),
  salary NUMBER,
  city VARCHAR2(20)
);

INSERT INTO employee VALUES (1, 'Harshad', 'IT', 50000, 'Pune');
INSERT INTO employee VALUES (2, 'Sneha', 'HR', 40000, 'Mumbai');
INSERT INTO employee VALUES (3, 'Rohit', 'Finance', 45000, 'Pune');
INSERT INTO employee VALUES (4, 'Priya', 'IT', 60000, 'Delhi');

SELECT * FROM employee;

SELECT name, salary FROM employee
WHERE dept='IT' AND city='Pune';

SELECT name, salary+5000 AS new_salary FROM employee
WHERE salary < 60000;

SELECT UPPER(name) AS NAME_IN_CAPS, LENGTH(name) AS NAME_LEN FROM employee;

UPDATE employee SET salary = salary + 2000 WHERE name = 'Sneha';

DELETE FROM employee WHERE dept = 'Finance';

SELECT dept, AVG(salary) AS avg_salary
FROM employee GROUP BY dept ORDER BY avg_salary DESC;

SELECT name FROM employee WHERE city='Pune'
UNION
SELECT name FROM employee WHERE city='Mumbai';
